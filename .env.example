# .env.example
# Copy this file to .env and modify the values as needed
# cp .env.example .env

# MongoDB Configuration
MONGO_REPLICA_SET_NAME=rs0
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here

# Mongo Express Configuration (Web UI)
ME_CONFIG_BASICAUTH_USERNAME=webadmin
ME_CONFIG_BASICAUTH_PASSWORD=your_web_password_here

# Ports Configuration
MONGO1_PORT=27017
MONGO2_PORT=27018
MONGO3_PORT=27019
MONGO_EXPRESS_PORT=8081

# Memory limits (adjust for your Raspberry Pi)
MONGO_MEMORY_LIMIT=1g
MONGO_EXPRESS_MEMORY_LIMIT=256m

# Optional: Custom MongoDB options
# MONGO_OPTIONS=--wiredTigerCacheSizeGB 0.5